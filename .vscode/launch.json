{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/DSA",  // Caminho para o executável
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,  // Configurar para abrir um terminal externo
            "MIMode": "gdb",  // Usar o GDB como o depurador
            "setupCommands": [
                {
                    "description": "Habilitar a exibição das variáveis C++",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Caminho do GDB no Linux
            // "preLaunchTask": "build",  // Tarefa para compilar antes de iniciar a depuração
            "logging": { "moduleLoad": false },
            "serverLaunchTimeout": 10000,
            "filterStderr": true,
            "filterStdout": true
        }
    ]
}
